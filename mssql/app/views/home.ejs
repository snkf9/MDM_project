  <body>
    
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="sample_data">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <script>
        
        $(document).ready(function(){
        
            load_data();
          
            function load_data()
            {
                $.ajax({
                    url:"http://localhost:3000/fetch",
                    method:"POST",
                    //data: "fetch",
                    dataType : "JSON",
                    success:function(data){
                        console.log(data.result[0]);
                    
                    {
                        var html = '';
        
                        if(data.result.length > 0)
                        {
                            for(var count = 0; count < data.result.length; count++)
                            {
                                html += `
                                <tr>
                                    <td>`+data.result[count].First_Name+`</td>
                                    <td>`+data.result[count].Last_Name+`</td>
                                    <td>`+data.result[count].Gender+`</td>
                                    <td>`+data.result[count].Age+`</td>
                                   
                                </tr>
                                `;
                            }
                        }
        
                        $('#sample_data tbody').html(html);
                        }}
                 });
            }
        })
        </script>
            
        
